{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "headers": {
        "cache-control": "s-maxage=31536000,immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  
  "scripts": {
    "build": "react-scripts build",
    "vercel-build": "npm run build"
  },
  
  "env": {
    "REACT_APP_API_URL": "https://music-streaming-app-v3kx.onrender.com"
  }
}